.top {
  padding-left: 6vw;
  padding-right: 6vw;
  padding-bottom: 10px;
  border-bottom-right-radius: 24px;
  border-bottom-left-radius: 24px;
  background-image: linear-gradient(to top, #def8eb 0%, #d0f5ee 100%);
}

.name {
  font-weight: 600;
  color: #565656;
}

.avatar-name {
  font-weight: 600;
  color: #565656;
  max-width: 8rem;
}

.id {
  font-size: smaller;
  color: #606060;
}

.edit {
  font-size: smaller;
  color: #606060;
}

.num {
  font-weight: 600;
  color: white;
}

.wrapper {
  padding-left: 4vw;
  padding-right: 4vw;
  width: 100vw;
  /* height: 64vh; */
}

.list {
  width: 90vw;
  display: flex;
  flex-flow: row wrap;
  justify-content: start;
  align-items: center;
  margin-top: 2vh;
  gap: 1vw;
  background-color: transparent;
}

.list-item-create {
  color: #d4237a;
  align-items: center;
  font-weight: 600;
}

.list-item {
  width: 44vw;
  height: 45vw;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.list-item-time {
  position: absolute;
  color: rgb(248, 248, 248);
  font-size: x-small;
  top: 2vh;
  left: 4vw;
}

.list-item-love {
  position: absolute;
  color: rgb(248, 248, 248);
  font-size: x-small;
  bottom: 2vh;
  right: 4vw;
}


.edit-b {
  font-size: x-small;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 10px;
  margin-bottom: 10px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.container {
  display: flex;
}

.avatar-b {
  border-radius: 100%;
  border: solid 1px red;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color:transparent;

}

.avatar-b image {
  width: 128rpx;
  height: 128rpx;
}

.input-me {
  width: 100%;
  font-size: small;
  word-wrap: break-word;
}